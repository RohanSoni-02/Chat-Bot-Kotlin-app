<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:background="@drawable/slabrev"
        android:backgroundTint="@color/purple_500"
        android:padding="14dp"
        android:text="Welcome User!"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:visibility="visible"
        android:id="@+id/tv_command"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"
        android:background="@drawable/slabrev"
        android:backgroundTint="@color/purple_500"
        android:padding="14dp"
        android:text="You can use the following commands: "
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="271dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/slabrev"
            android:backgroundTint="@color/teal_700"
            android:padding="14dp"
            android:text="'search' anything"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/slab"
            android:backgroundTint="@color/teal_700"
            android:gravity="center"
            android:padding="14dp"
            android:text="'google'"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="141dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/center"
            android:backgroundTint="@color/teal_700"
            android:padding="14dp"
            android:text="'gallery'"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_flip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="107dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/center"
            android:backgroundTint="@color/teal_700"
            android:padding="14dp"
            android:text="'flip a coin'"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_solve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="221dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/slabrev"
            android:backgroundTint="@color/teal_700"
            android:padding="14dp"
            android:text="'solve' any basic equation"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_joke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/slab"
            android:backgroundTint="@color/teal_700"
            android:padding="14dp"
            android:text="'joke'"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/center"
            android:backgroundTint="@color/teal_700"
            android:padding="14dp"
            android:text="'game'"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="233dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/center"
            android:backgroundTint="@color/teal_700"
            android:padding="14dp"
            android:text="'time'"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </RelativeLayout>



</LinearLayout>